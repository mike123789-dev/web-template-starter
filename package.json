{
  "name": "web-template-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:open": "node scripts/dev-open.mjs",
    "dev:stop": "lsof -tiTCP:3000 -sTCP:LISTEN | xargs -r kill",
    "browser:evidence": "node scripts/browser-evidence.mjs",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint && npm run typecheck && npm run test:unit",
    "premerge:check": "node scripts/premerge-check.mjs",
    "premerge:check:evidence": "node scripts/premerge-check.mjs --with-browser-evidence",
    "specs:test": "node --test .agents/skills/spec-driven-workflow/scripts/common.test.mjs",
    "specs:new": "node .agents/skills/spec-driven-workflow/scripts/bootstrap-feature.mjs",
    "specs:progress": "node .agents/skills/spec-driven-workflow/scripts/build-progress.mjs",
    "specs:status": "node .agents/skills/spec-driven-workflow/scripts/show-progress.mjs",
    "specs:check": "npm run specs:progress && npm run specs:status",
    "specs:validate": "node .agents/skills/spec-driven-workflow/scripts/validate-specs.mjs",
    "specs:task:done": "node .agents/skills/spec-driven-workflow/scripts/task-done.mjs",
    "specs:feature:status": "node .agents/skills/spec-driven-workflow/scripts/feature-status.mjs",
    "prompt:eval": "promptfoo eval -c promptfoo.yaml",
    "prompt:view": "promptfoo view",
    "prompt:guard": "npm run prompt:eval",
    "prompt:quality:raw": "promptfoo eval -c promptfoo.codex-quality.yaml",
    "prompt:quality": "node scripts/prompt-guard/quality-score.mjs",
    "prompt:quality:subagents": "node scripts/prompt-guard/subagent-quality-score.mjs",
    "prompt:all": "npm run prompt:guard && npm run prompt:quality",
    "storybook": "node scripts/storybook-dev.mjs",
    "build-storybook": "storybook build",
    "test": "npm run test:unit && npm run test:storybook",
    "test:all": "npm run test:unit && npm run test:storybook && npm run test:e2e",
    "test:unit": "vitest --project unit",
    "test:storybook": "vitest --project storybook",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@playwright/test": "^1.58.1",
    "@storybook/addon-vitest": "^10.2.6",
    "@storybook/nextjs-vite": "^10.2.6",
    "@tailwindcss/postcss": "latest",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "agent-browser": "^0.9.0",
    "autoprefixer": "latest",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-storybook": "^10.2.6",
    "playwright": "^1.58.1",
    "postcss": "latest",
    "promptfoo": "^0.120.23",
    "storybook": "^10.2.6",
    "tailwindcss": "latest",
    "typescript": "latest",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
